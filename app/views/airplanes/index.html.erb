<h1>Listing airplanes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Image url</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @airplanes.each do |airplane| %>
    <tr>
      <td><%= airplane.name %></td>
      <td><%= airplane.desc %></td>
      <td><%= airplane.image_url %></td>
      <td><%= link_to 'Show', airplane %></td>
      <td><%= link_to 'Edit', edit_airplane_path(airplane) %></td>
      <td><%= link_to 'Destroy', airplane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

